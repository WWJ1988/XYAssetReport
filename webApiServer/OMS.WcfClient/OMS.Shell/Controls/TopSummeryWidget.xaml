<UserControl x:Class="OMS.Shell.Controls.TopSummeryWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:prism="http://www.codeplex.com/prism"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
	<TabControl>
		<TabItem Header="{Binding ShowedDataModel.Header}">
			<ContentControl Name="baseContent" DataContext="{Binding ShowedDataModel}"
							prism:RegionManager.RegionContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.ContentRegion, Mode=TwoWay}"
                            prism:RegionManager.RegionName="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.ContentRegionName}"/>
		</TabItem>
	</TabControl>
</UserControl>
